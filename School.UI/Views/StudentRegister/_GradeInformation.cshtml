@model School.Entities.Fields.Student

<style>
    #childPage {
        width: 800px;
        left: calc(50% - 400px);
        display: none;
    }

        #childPage #partialHolder {
            /*height: calc(100% - 2px);*/
            border: none;
            overflow-y: hidden;
            overflow-x: hidden;
            max-height: 260px;
        }
</style>


@using (Ajax.BeginForm("Update", "Student", new AjaxOptions { OnSuccess = "OnSuccess", OnFailure = "OnFailure", HttpMethod = "POST" }, new { @class = "form-horizontal", role = "form", id = "addNewForm" }))
{
    <div id="addNew-page" class="col-xs-12">
        <div class="form-horizontal" style="padding-top:20px;">

            <div class="form-group" hidden>
                @Html.LabelFor(model => model.StudentId, new { @class = "col-sm-4 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.StudentId, new { @id = "StudentId", @class = "col-sm-12 fileStyle form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Firstname, new { @class = "col-sm-4 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Firstname, new { @id = "Firstname", @class = "col-sm-12 fileStyle form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.LastName, new { @class = "col-sm-4 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Email, new { @class = "col-sm-4 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.DateOfBirth, new { @class = "col-sm-4 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.DateOfBirth, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-4 col-md-10">
                    <input id="btnSave" type="submit" value="Save" class="btn btn-success" onclick='return validateInput()' />
                    <button type="button" id="btnClose" class="btn btn-danger btnWidth btnlogColor" onclick="closepopup(this)">Close</button>
                </div>
            </div>
        </div>
    </div>
}
    <script>

        function validateInput() {
            return true;
        }

        function OnFailure(response) {
        };
        function OnSuccess(response) {
        };

    </script>
