        text-decoration: none;
        text-transform: uppercase;
        box-shadow: 0 0 7px black;
    }

    .arrow {
        width: 70px;
        height: 16px;
        overflow: hidden;
        position: absolute;
        left: 50%;
        margin-left: -35px;
        bottom: -16px;
    }

        .arrow:after {
            content: "";
            position: absolute;
            left: 20px;
            top: -20px;
            width: 25px;
            height: 25px;
            box-shadow: 6px 5px 9px -9px black, 5px 6px 9px -9px black;
            transform: rotate(45deg);
        }

    .tooltip.active {
        opacity: 1;
        margin-top: 5px;
        transition: all 0.2s ease;
    }

    .tooltip.out {
        opacity: 0;
        margin-top: -20px;
    }
</style>


