<script>

    $(document).ready(function () {

        if (deviceSize.width < 700) {
            $("#layoutLeftId").addClass("isOpen");
            classMenuHelper.openCloseMenu(deviceSize.width);
        }
        else {
            $("#layoutLeftId").removeClass("isOpen");
            classMenuHelper.openCloseMenu(deviceSize.width);
        }

        $('.popupOverlay').click(function (event) {
            //.rotatedCloseBtn
            var obj = {
                element: "#Home-Container .divParent button#btnCloseGeneric",
                page: "ovalay",
                action: "",
                color: "1",
                background: "1",
                visibility: "",
            }
            classTimerGeneric.startTimer(obj, 10);
            //100*30 = 3 minutes
        });
    });

    window.onerror = function (msg, url, lineNo, columnNo, error) {
        var string = msg.toLowerCase();
        var substring = "script error";
        if (string.indexOf(substring) > -1) {
            alert('Script Error: See Browser Console for Detail');
        } else {
            var message = [
                'Message: ' + msg,
                'URL: ' + url,
                'Line: ' + lineNo,
                'Column: ' + columnNo,
                'Error object: ' + JSON.stringify(error)
            ].join(' - ');

            alert(message);
        }

        return false;
    };

</script>
