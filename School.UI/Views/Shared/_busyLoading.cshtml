
@model string

<style>

    #OverlayBusyLoadingIcon {
        position: relative;
        opacity: 0.1;
        background-color: white;
        width: 100%;
        height: 100%;
        z-index: 1112;
        top: 0;
        left: 0;
        position: fixed;
        display: block;
    }

    #BodyBusyLoadingIcon {
        position: absolute;
        border-radius: 1px;
        height: 200px;
        width: 340px;
        left: calc((100% - (340px + 2px)) / 2 );
        top: 200px;
        display: flex;
        background-color: rgb(77, 96, 130);
        z-index: 1015;
        display: block;
        -webkit-box-shadow: -1px 1px 42px 1px rgba(0,0,0,0.47);
        -moz-box-shadow: -1px 1px 42px 1px rgba(0,0,0,0.47);
        box-shadow: -1px 1px 42px 1px rgba(0,0,0,0.47);
    }
</style>



<div id="OverlayBusyLoadingIcon" style="display:block;"></div>
<div id="BodyBusyLoadingIcon" class="col-xs-12 childBodyPage" style="display:block; padding:0;margin:0;border: 1px solid wheat; border-radius: 10px;">

    <div class="gridParent col-xs-12" style="padding:0;margin:0;">

        <div class="gridColumnLeft" style="min-width:10px;max-width:10px;">

        </div>
        <div class="gridColumnCenter" style="width: calc(100% - 2px);margin-left: 1px;padding:0;display: inline-block;">

            <div class="gridChild  col-xs-12">
                <div class="gridRowSpace col-xs-12" style="min-height:20px;max-height:20px;">

                </div>
                <div class="gridRow_0 col-xs-12" style="min-height:80px;max-height:80px;">

                    <span class="fa fa-spinner fa-spin" style="font-size:44px;margin-top:10px;  margin-left:120px;color:darkblue"></span>

                </div>
                <div class="divMessage gridRowSpace  col-xs-12" style="min-height:20px;max-height:20px;">
                    <p class="headerText text-center" style="font-size:18px;color:white;">@Model</p>
                </div>
                <div class="gridRow_1" style="min-height:40px;max-height:40px;">

                </div>
                <div class="gridRowSpace gridRow-Zore">

                </div>
            </div>
        </div>
        <div class="gridColumnRight">

        </div>
    </div>
</div>