                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.StudentResults.CourseName, new { @class = "col-sm-4 control-label", @style = "color:white" })
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.StudentResults.CourseName, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-4 col-md-8">
                    <button type="submit" id="btnViewReport" class="btn btn-primary btnWidth btnlogColor">View Report</button>
                    <button type="button" id="btnPrintReport" class="btn btn-warning btnWidth btnlogColor">Print Report</button>
                </div>
            </div>

