                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.StudentResults.StudentId, new { @id = "StudentId", @class = "col-sm-12 fileStyle form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.StudentResults.Firstname, new { @class = "col-sm-4 control-label", @style = "color:white" })
